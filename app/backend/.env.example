# Database
DATABASE_URL="postgresql://user:password@localhost:5432/earntrack?schema=public"

# JWT
JWT_SECRET="your-super-secret-jwt-key-change-this-in-production"
JWT_EXPIRES_IN="7d"

# Server
PORT=3001
NODE_ENV="development"
LOG_LEVEL="debug"

# CORS
ALLOWED_ORIGINS="http://localhost:5173,http://localhost:3000"

# Rate Limiting
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# Security
HELMET_ENABLED=true
COMPRESSION_ENABLED=true
CORS_CREDENTIALS=true

# Monitoring & Analytics
ENABLE_REQUEST_LOGGING=true
ENABLE_ERROR_TRACKING=false

# Sentry Error Tracking - Get your DSN from https://sentry.io
SENTRY_DSN=
SENTRY_ENVIRONMENT=development
SENTRY_TRACE_SAMPLE_RATE=0.1
APP_VERSION=1.0.0

# Email (optional)
SMTP_HOST=
SMTP_PORT=587
SMTP_USER=
SMTP_PASSWORD=
EMAIL_FROM=noreply@earntrack.app

# File Upload (optional)
MAX_FILE_SIZE_MB=10
ALLOWED_FILE_TYPES="pdf,jpg,jpeg,png"

# AWS S3 Configuration
AWS_ACCESS_KEY_ID=your-aws-access-key-id
AWS_SECRET_ACCESS_KEY=your-aws-secret-access-key
AWS_S3_BUCKET=your-s3-bucket-name
AWS_REGION=us-east-1

# AI Chatbot (OpenAI)
OPENAI_API_KEY=
OPENAI_MODEL_NAME="gpt-4o-mini"
OPENAI_MAX_TOKENS=1000

# WhatsApp Integration (Twilio)
TWILIO_ACCOUNT_SID=
TWILIO_AUTH_TOKEN=
TWILIO_PHONE_NUMBER=

# WebAuthn/FIDO2 Configuration
WEBAUTHN_RP_NAME="EarnTrack"
WEBAUTHN_RP_ID="localhost"  # Change to your domain in production (e.g., "earntrack.app")
WEBAUTHN_ORIGIN="http://localhost:3000"  # Change to your frontend URL in production
