# Database
DATABASE_URL="postgresql://user:password@localhost:5432/earntrack"

# JWT
JWT_SECRET="your-secret-key-here"
JWT_EXPIRES_IN="7d"

# Server
PORT=3000
NODE_ENV="development"

# Stripe Payment Integration
# Get your keys from: https://dashboard.stripe.com/apikeys
STRIPE_SECRET_KEY="sk_test_..." # Your Stripe secret key (use sk_test_ for testing, sk_live_ for production)
STRIPE_PUBLISHABLE_KEY="pk_test_..." # Your Stripe publishable key (use pk_test_ for testing, pk_live_ for production)

# Stripe Webhooks (Optional - for handling subscription events)
# Create webhook endpoint at: https://dashboard.stripe.com/webhooks
# Events to listen for: customer.subscription.updated, customer.subscription.deleted, invoice.payment_succeeded, invoice.payment_failed
STRIPE_WEBHOOK_SECRET="whsec_..." # Your webhook signing secret

# Email (for notifications)
SMTP_HOST="smtp.gmail.com"
SMTP_PORT=587
SMTP_USER="your-email@gmail.com"
SMTP_PASSWORD="your-password"
EMAIL_FROM="noreply@earntrack.com"

# Redis (Optional - for caching, if using Redis instead of in-memory cache)
# REDIS_URL="redis://localhost:6379"

# Sentry (Optional - for error tracking)
# SENTRY_DSN="https://..."

# AWS S3 (Optional - for file storage)
# AWS_ACCESS_KEY_ID="..."
# AWS_SECRET_ACCESS_KEY="..."
# AWS_REGION="us-east-1"
# AWS_S3_BUCKET="..."

# OpenAI (Optional - for AI features)
# OPENAI_API_KEY="sk-..."

# Twilio (Optional - for SMS)
# TWILIO_ACCOUNT_SID="..."
# TWILIO_AUTH_TOKEN="..."
# TWILIO_PHONE_NUMBER="..."
