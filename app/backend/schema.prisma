// Prisma Schema for EarnTrack
// Database: PostgreSQL

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id           String     @id @default(uuid())
  email        String     @unique
  passwordHash String     @map("password_hash")
  name         String?
  timezone     String     @default("UTC")
  currency     String     @default("USD") @db.VarChar(3)
  createdAt    DateTime   @default(now()) @map("created_at")
  updatedAt    DateTime   @updatedAt @map("updated_at")

  platforms      Platform[]
  earnings       Earning[]
  goals          Goal[]
  subscription   Subscription?
  emailSettings  EmailSettings?
  affiliateProfile AffiliateProfile?
  workspaceMembers WorkspaceMember[]
  auditLogs      AuditLog[]
  aiInsights     AIInsight[]
  publishedPlugins Plugin[]
  pluginInstallations PluginInstallation[]
  pluginReviews  PluginReview[]
  profile        UserProfile?
  followers      UserFollowing[] @relation("followers")
  following      UserFollowing[] @relation("following")
  badges         Badge[]
  socialPosts    SocialPost[]
  postLikes      PostLike[]
  achievementShares AchievementShare[]
  security       UserSecurity?
  sessions       UserSession[]
  ipWhitelistEntries IPWhitelist[]
  auditLogs      SecurityAuditLog[]
  dataExports    DataExportRequest[]
  dataDeletions  DataDeleteRequest[]
  scheduledTasks ScheduledTask[]
  notificationRules NotificationRule[]
  notifications Notification[]
  notificationPreference NotificationPreference?
  customDashboards CustomDashboard[]
  analyticsSnapshots AnalyticsSnapshot[]
  reportTemplates ReportTemplate[]
  customReports CustomReport[]
  chartVisualizations ChartVisualization[]
  budgets Budget[]
  categoryBudgets CategoryBudget[]
  financialPlans FinancialPlan[]
  languagePreference LanguagePreference? @relation("UserLanguagePreference")
  languageStats LanguageStatistic[] @relation("UserLanguageStats")
  ownedWorkspaces Workspace[] @relation("WorkspaceOwner")
  workspaces WorkspaceMember[] @relation("WorkspaceMembers")
  invitedWorkspaces WorkspaceInvitation[] @relation("InvitedWorkspaces")
  createdProjects WorkspaceProject[] @relation("CreatedProjects")
  assignedTasks WorkspaceTask[] @relation("AssignedTasks")
  sharedDashboards SharedDashboard[] @relation("SharedDashboards")
  workspaceActivityLog WorkspaceActivity[] @relation("WorkspaceActivityLog")
  automationRules AutomationRule[] @relation("AutomationRules")
  workflows Workflow[] @relation("Workflows")
  scheduledAutomations ScheduledAutomation[] @relation("ScheduledAutomations")
  automationHistory AutomationHistory[] @relation("AutomationHistory")
  realtimeConnections RealtimeConnection[] @relation("RealtimeConnections")
  presence UserPresence? @relation("UserPresence")
  realtimeAlerts RealtimeAlert[] @relation("RealtimeAlerts")
  dataSubscriptions DataSubscription[] @relation("DataSubscriptions")
  liveEvents LiveEvent[] @relation("LiveEvents")
  notificationDeliveries NotificationDelivery[] @relation("NotificationDeliveries")
  realtimeSubscriptions RealtimeSubscription[] @relation("RealtimeSubscriptions")
  performanceMetrics PerformanceMetric[] @relation("PerformanceMetrics")
  errorLogs ErrorLog[] @relation("ErrorLogs")
  backups Backup[] @relation("Backups")
  recoveries Recovery[] @relation("Recoveries")
  dataArchives DataArchive[] @relation("DataArchives")
  backupStrategies BackupStrategy[] @relation("BackupStrategies")
  syncDevices SyncDevice[] @relation("SyncDevices")
  syncQueue SyncQueue[] @relation("SyncQueue")
  syncConflicts SyncConflict[] @relation("SyncConflicts")
  dataVersions DataVersion[] @relation("DataVersions")
  syncLogs SyncLog[] @relation("SyncLogs")
  selectiveSync SelectiveSync? @relation("SelectiveSync")
  complianceRecords ComplianceRecord[] @relation("ComplianceRecords")
  auditLogEntries AuditLogEntry[] @relation("AuditLogEntries")
  compliancePolicies CompliancePolicy[] @relation("CompliancePolicies")
  complianceViolations ComplianceViolation[] @relation("ComplianceViolations")
  dataRetentionPolicies DataRetentionPolicy[] @relation("DataRetentionPolicies")
  complianceReports ComplianceReport[] @relation("ComplianceReports")
  auditEvidence AuditEvidence[] @relation("AuditEvidence")
  receipts Receipt[] @relation("Receipts")
  extractedExpenses ExtractedExpense[] @relation("ExtractedExpenses")

  @@map("users")
}

model Platform {
  id           String    @id @default(uuid())
  userId       String    @map("user_id")
  name         String    @db.VarChar(100)
  category     String    @db.VarChar(50) // freelance, delivery, services, other
  color        String?   @db.VarChar(7) // hex color
  expectedRate Decimal?  @map("expected_rate") @db.Decimal(10, 2)
  isActive     Boolean   @default(true) @map("is_active")
  createdAt    DateTime  @default(now()) @map("created_at")
  updatedAt    DateTime  @updatedAt @map("updated_at")

  user         User      @relation(fields: [userId], references: [id], onDelete: Cascade)
  earnings     Earning[]

  @@unique([userId, name])
  @@index([userId, isActive])
  @@map("platforms")
}

model Earning {
  id         String   @id @default(uuid())
  userId     String   @map("user_id")
  platformId String   @map("platform_id")
  date       DateTime @db.Date
  hours      Decimal? @db.Decimal(5, 2)
  amount     Decimal  @db.Decimal(10, 2)
  notes      String?  @db.Text
  createdAt  DateTime @default(now()) @map("created_at")
  updatedAt  DateTime @updatedAt @map("updated_at")

  user       User     @relation(fields: [userId], references: [id], onDelete: Cascade)
  platform   Platform @relation(fields: [platformId], references: [id], onDelete: Cascade)

  @@index([userId, date(sort: Desc)])
  @@index([platformId, date(sort: Desc)])
  @@map("earnings")
}

model Goal {
  id           String   @id @default(uuid())
  userId       String   @map("user_id")
  type         String   @db.VarChar(50) // daily, weekly, monthly
  targetAmount Decimal  @map("target_amount") @db.Decimal(10, 2)
  startDate    DateTime @map("start_date") @db.Date
  endDate      DateTime? @map("end_date") @db.Date
  isActive     Boolean  @default(true) @map("is_active")
  createdAt    DateTime @default(now()) @map("created_at")

  user         User     @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@map("goals")
}

model Subscription {
  id                String   @id @default(uuid())
  userId            String   @unique @map("user_id")
  tier              String   @default("free") @db.VarChar(20) // free, pro, business
  stripeCustomerId  String?  @unique @map("stripe_customer_id") @db.VarChar(255)
  stripeSubId       String?  @unique @map("stripe_subscription_id") @db.VarChar(255)
  status            String   @default("active") @db.VarChar(50) // active, cancelled, past_due
  currentPeriodEnd  DateTime? @map("current_period_end")
  cancelAtPeriodEnd Boolean  @default(false) @map("cancel_at_period_end")
  createdAt         DateTime @default(now()) @map("created_at")
  updatedAt         DateTime @updatedAt @map("updated_at")

  user              User     @relation(fields: [userId], references: [id], onDelete: Cascade)
  payments          Payment[]

  @@index([tier])
  @@index([status])
  @@map("subscriptions")
}

model Payment {
  id                String   @id @default(uuid())
  userId            String   @map("user_id")
  subscriptionId    String   @map("subscription_id")
  stripePaymentId   String   @unique @map("stripe_payment_id") @db.VarChar(255)
  amount            Decimal  @db.Decimal(10, 2)
  currency          String   @db.VarChar(3)
  status            String   @db.VarChar(50) // succeeded, failed, pending
  invoiceUrl        String?  @map("invoice_url") @db.Text
  createdAt         DateTime @default(now()) @map("created_at")

  subscription      Subscription @relation(fields: [subscriptionId], references: [id], onDelete: Cascade)

  @@index([userId])
  @@index([status])
  @@map("payments")
}

model NewsletterSubscriber {
  id                String   @id @default(uuid())
  email             String   @unique
  name              String?
  isSubscribed      Boolean  @default(true)
  verificationToken String?
  isVerified        Boolean  @default(false)
  createdAt         DateTime @default(now()) @map("created_at")
  updatedAt         DateTime @updatedAt @map("updated_at")

  @@index([isSubscribed])
  @@map("newsletter_subscribers")
}

model EmailSettings {
  id                String   @id @default(uuid())
  userId            String   @unique @map("user_id")
  weeklyNewsletter  Boolean  @default(true)
  goalReminders     Boolean  @default(true)
  platformUpdates   Boolean  @default(true)
  promotions        Boolean  @default(false)
  createdAt         DateTime @default(now()) @map("created_at")
  updatedAt         DateTime @updatedAt @map("updated_at")

  user              User     @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@map("email_settings")
}

model EmailTemplate {
  id                String   @id @default(uuid())
  userId            String   @map("user_id")
  name              String
  subject           String
  content           String   @db.Text
  type              String   @default("custom")
  createdAt         DateTime @default(now()) @map("created_at")
  updatedAt         DateTime @updatedAt @map("updated_at")

  campaigns         EmailCampaign[]

  @@index([userId])
  @@map("email_templates")
}

model EmailCampaign {
  id                String   @id @default(uuid())
  userId            String   @map("user_id")
  templateId        String?  @map("template_id")
  subject           String
  recipientCount    Int
  sentCount         Int      @default(0)
  failedCount       Int      @default(0)
  createdAt         DateTime @default(now()) @map("created_at")

  template          EmailTemplate? @relation(fields: [templateId], references: [id], onDelete: SetNull)

  @@index([userId])
  @@map("email_campaigns")
}

model AffiliateProfile {
  id                    String   @id @default(uuid())
  userId                String   @unique @map("user_id")
  referralCode          String   @unique
  referralLink          String
  tier                  String   @default("bronze") // bronze, silver, gold, platinum
  status                String   @default("active")
  totalEarningsGenerated Decimal  @default(0) @db.Decimal(10, 2) @map("total_earnings_generated")
  totalPaid             Decimal  @default(0) @db.Decimal(10, 2) @map("total_paid")
  payoutMethod          String?  @map("payout_method")
  createdAt             DateTime @default(now()) @map("created_at")
  updatedAt             DateTime @updatedAt @map("updated_at")

  user                  User     @relation(fields: [userId], references: [id], onDelete: Cascade)
  conversions           AffiliateConversion[]
  clicks                AffiliateClick[]
  payouts               AffiliatePayout[]

  @@index([status])
  @@index([tier])
  @@map("affiliate_profiles")
}

model AffiliateClick {
  id                String   @id @default(uuid())
  affiliateId       String   @map("affiliate_id")
  sourceType        String   @default("link") // link, email, banner, social
  createdAt         DateTime @default(now()) @map("created_at")

  affiliate         AffiliateProfile @relation(fields: [affiliateId], references: [id], onDelete: Cascade)

  @@index([affiliateId, createdAt(sort: Desc)])
  @@map("affiliate_clicks")
}

model AffiliateConversion {
  id                String   @id @default(uuid())
  affiliateId       String   @map("affiliate_id")
  referredUserId    String   @map("referred_user_id")
  tierUpgradedTo    String   @map("tier_upgraded_to")
  commissionRate    Decimal  @db.Decimal(5, 2) @map("commission_rate")
  commissionEarned  Decimal  @db.Decimal(10, 2) @map("commission_earned")
  createdAt         DateTime @default(now()) @map("created_at")

  affiliate         AffiliateProfile @relation(fields: [affiliateId], references: [id], onDelete: Cascade)

  @@index([affiliateId, createdAt(sort: Desc)])
  @@map("affiliate_conversions")
}

model AffiliatePayout {
  id                String   @id @default(uuid())
  affiliateId       String   @map("affiliate_id")
  amount            Decimal  @db.Decimal(10, 2)
  payoutMethod      String   @map("payout_method") // stripe, paypal, bank
  status            String   @default("pending") // pending, completed, failed
  transactionId     String?  @unique @map("transaction_id")
  createdAt         DateTime @default(now()) @map("created_at")
  completedAt       DateTime? @map("completed_at")

  affiliate         AffiliateProfile @relation(fields: [affiliateId], references: [id], onDelete: Cascade)

  @@index([status])
  @@index([affiliateId, createdAt(sort: Desc)])
  @@map("affiliate_payouts")
}

model ApiKey {
  id                String   @id @default(uuid())
  userId            String   @map("user_id")
  hashedKey         String   @unique @map("hashed_key")
  name              String
  isActive          Boolean  @default(true)
  lastUsedAt        DateTime? @map("last_used_at")
  createdAt         DateTime @default(now()) @map("created_at")

  @@index([userId])
  @@map("api_keys")
}

model Webhook {
  id                String   @id @default(uuid())
  userId            String   @map("user_id")
  url               String
  secret            String
  events            String[] // Array of event types
  isActive          Boolean  @default(true)
  lastFiredAt       DateTime? @map("last_fired_at")
  createdAt         DateTime @default(now()) @map("created_at")

  @@index([userId])
  @@map("webhooks")
}

model ApiUsage {
  id                String   @id @default(uuid())
  userId            String   @map("user_id")
  endpoint          String
  method            String
  statusCode        Int
  createdAt         DateTime @default(now()) @map("created_at")

  @@index([userId, createdAt(sort: Desc)])
  @@map("api_usage")
}

model ScheduledReport {
  id                String   @id @default(uuid())
  userId            String   @map("user_id")
  name              String
  frequency         String   // daily, weekly, monthly
  format            String   // pdf, csv, excel, json
  recipients        String[] // Email addresses
  filters           Json?    // Custom filter criteria
  isActive          Boolean  @default(true)
  lastRunAt         DateTime? @map("last_run_at")
  createdAt         DateTime @default(now()) @map("created_at")

  executions        ReportExecution[]

  @@index([userId])
  @@map("scheduled_reports")
}

model ReportExecution {
  id                String   @id @default(uuid())
  scheduledReportId String   @map("scheduled_report_id")
  status            String   // success, failed, pending
  downloadUrl       String?  @map("download_url")
  executedAt        DateTime @default(now()) @map("executed_at")

  scheduledReport   ScheduledReport @relation(fields: [scheduledReportId], references: [id], onDelete: Cascade)

  @@index([scheduledReportId])
  @@map("report_executions")
}

model Integration {
  id                String   @id @default(uuid())
  userId            String   @map("user_id")
  integrationId     String   @map("integration_id") // slack, discord, etc
  accessToken       String   @map("access_token") // encrypted
  config            Json?
  isConnected       Boolean  @default(true)
  lastSyncAt        DateTime? @map("last_sync_at")
  createdAt         DateTime @default(now()) @map("created_at")

  @@unique([userId, integrationId])
  @@index([userId])
  @@map("integrations")
}

model AutomationRule {
  id                String   @id @default(uuid())
  userId            String   @map("user_id")
  name              String
  trigger           String   // earnings_created, goal_achieved, milestone_hit
  action            String   // send_slack, send_email, sync_sheets
  config            Json?    // action-specific config
  isActive          Boolean  @default(true)
  lastExecutedAt    DateTime? @map("last_executed_at")
  createdAt         DateTime @default(now()) @map("created_at")

  @@index([userId])
  @@map("automation_rules")
}

model AutomationLog {
  id                String   @id @default(uuid())
  userId            String   @map("user_id")
  ruleId            String   @map("rule_id")
  status            String   // success, failed, skipped
  message           String?
  executedAt        DateTime @default(now()) @map("executed_at")

  @@index([userId, executedAt(sort: Desc)])
  @@map("automation_logs")
}

model Workspace {
  id                String   @id @default(uuid())
  ownerId           String   @map("owner_id")
  name              String
  inviteCode        String   @unique
  createdAt         DateTime @default(now()) @map("created_at")

  members           WorkspaceMember[]
  settings          WorkspaceSettings?
  auditLogs         AuditLog[]

  @@index([ownerId])
  @@map("workspaces")
}

model WorkspaceMember {
  id                String   @id @default(uuid())
  workspaceId       String   @map("workspace_id")
  userId            String   @map("user_id")
  role              String   @default("member") // owner, admin, member, viewer
  joinedAt          DateTime @default(now()) @map("joined_at")

  workspace         Workspace @relation(fields: [workspaceId], references: [id], onDelete: Cascade)
  user              User      @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@unique([workspaceId, userId])
  @@index([workspaceId])
  @@map("workspace_members")
}

model WorkspaceSettings {
  id                String   @id @default(uuid())
  workspaceId       String   @unique @map("workspace_id")
  allowPublicReports Boolean @default(false) @map("allow_public_reports")
  requireApprovalForExpenses Boolean @default(false) @map("require_approval_for_expenses")
  twoFactorRequired Boolean @default(false) @map("two_factor_required")
  createdAt         DateTime @default(now()) @map("created_at")
  updatedAt         DateTime @updatedAt @map("updated_at")

  workspace         Workspace @relation(fields: [workspaceId], references: [id], onDelete: Cascade)

  @@map("workspace_settings")
}

model AuditLog {
  id                String   @id @default(uuid())
  workspaceId       String   @map("workspace_id")
  userId            String   @map("user_id")
  action            String   // workspace_created, member_added, member_removed, etc
  details           Json?
  createdAt         DateTime @default(now()) @map("created_at")

  workspace         Workspace @relation(fields: [workspaceId], references: [id], onDelete: Cascade)
  user              User      @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@index([workspaceId, createdAt(sort: Desc)])
  @@index([userId])
  @@map("audit_logs")
}

model AIInsight {
  id                String   @id @default(uuid())
  userId            String   @map("user_id")
  title             String
  content           String   @db.Text
  category          String   // anomaly, forecast, recommendation, pattern
  insights          Json?    // Detailed insights data
  isSaved           Boolean  @default(false)
  createdAt         DateTime @default(now()) @map("created_at")
  updatedAt         DateTime @updatedAt @map("updated_at")

  user              User     @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@index([userId, createdAt(sort: Desc)])
  @@index([category])
  @@map("ai_insights")
}

model Plugin {
  id                String   @id @default(uuid())
  pluginId          String   @unique
  publisherId       String   @map("publisher_id")
  name              String   @db.VarChar(100)
  description       String   @db.Text
  version           String   @db.VarChar(20)
  category          String   @db.VarChar(50)
  tags              String[]
  documentation     String   @db.Text
  sourceCode        String   @db.Text
  permissions       String[]
  price             Decimal  @default(0) @db.Decimal(10, 2)
  isPublished       Boolean  @default(false)
  uniqueToken       String   @unique
  downloadCount     Int      @default(0)
  rating            Decimal  @default(0) @db.Decimal(3, 2)
  reviewCount       Int      @default(0)
  createdAt         DateTime @default(now()) @map("created_at")
  updatedAt         DateTime @updatedAt @map("updated_at")

  publisher         User     @relation(fields: [publisherId], references: [id], onDelete: Cascade)
  installedBy       PluginInstallation[]
  reviews           PluginReview[]

  @@index([publisherId])
  @@index([isPublished, downloadCount(sort: Desc)])
  @@index([category])
  @@map("plugins")
}

model PluginInstallation {
  id                String   @id @default(uuid())
  userId            String   @map("user_id")
  pluginId          String   @map("plugin_id")
  version           String   @db.VarChar(20)
  isActive          Boolean  @default(true)
  config            Json?    // Plugin-specific configuration
  installedAt       DateTime @default(now()) @map("installed_at")
  updatedAt         DateTime @updatedAt @map("updated_at")

  user              User     @relation(fields: [userId], references: [id], onDelete: Cascade)
  plugin            Plugin   @relation(fields: [pluginId], references: [pluginId], onDelete: Cascade)

  @@unique([userId, pluginId])
  @@index([userId])
  @@map("plugin_installations")
}

model PluginReview {
  id                String   @id @default(uuid())
  pluginId          String   @map("plugin_id")
  authorId          String   @map("author_id")
  rating            Int      // 1-5
  comment           String?  @db.Text
  createdAt         DateTime @default(now()) @map("created_at")
  updatedAt         DateTime @updatedAt @map("updated_at")

  plugin            Plugin   @relation(fields: [pluginId], references: [pluginId], onDelete: Cascade)
  author            User     @relation(fields: [authorId], references: [id], onDelete: Cascade)

  @@unique([pluginId, authorId])
  @@index([pluginId])
  @@index([authorId])
  @@map("plugin_reviews")
}

model UserProfile {
  id                String   @id @default(uuid())
  userId            String   @unique @map("user_id")
  bio               String?  @db.Text
  avatar            String?  @db.Text
  socialLinks       Json?    // Twitter, LinkedIn, etc
  createdAt         DateTime @default(now()) @map("created_at")
  updatedAt         DateTime @updatedAt @map("updated_at")

  user              User     @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@map("user_profiles")
}

model UserFollowing {
  id                String   @id @default(uuid())
  followerId        String   @map("follower_id")
  followingId       String   @map("following_id")
  createdAt         DateTime @default(now()) @map("created_at")

  follower          User     @relation("followers", fields: [followerId], references: [id], onDelete: Cascade)
  following         User     @relation("following", fields: [followingId], references: [id], onDelete: Cascade)

  @@unique([followerId, followingId])
  @@index([followerId])
  @@index([followingId])
  @@map("user_following")
}

model Badge {
  id                String   @id @default(uuid())
  userId            String   @map("user_id")
  badgeType         String   // earner_100, earner_1000, streak_30, etc
  description       String?  @db.Text
  earnedAt          DateTime @default(now()) @map("earned_at")

  user              User     @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@unique([userId, badgeType])
  @@index([userId])
  @@map("badges")
}

model SocialPost {
  id                String   @id @default(uuid())
  userId            String   @map("user_id")
  content           String   @db.Text
  postType          String   // achievement, milestone, update, question
  attachments       String[] // URLs
  isPublic          Boolean  @default(true)
  likesCount        Int      @default(0)
  sharesCount       Int      @default(0)
  createdAt         DateTime @default(now()) @map("created_at")
  updatedAt         DateTime @updatedAt @map("updated_at")

  user              User     @relation(fields: [userId], references: [id], onDelete: Cascade)
  likes             PostLike[]
  comments          PostComment[]

  @@index([userId, createdAt(sort: Desc)])
  @@index([isPublic])
  @@map("social_posts")
}

model PostLike {
  id                String   @id @default(uuid())
  postId            String   @map("post_id")
  userId            String   @map("user_id")
  createdAt         DateTime @default(now()) @map("created_at")

  post              SocialPost @relation(fields: [postId], references: [id], onDelete: Cascade)
  user              User     @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@unique([postId, userId])
  @@index([postId])
  @@map("post_likes")
}

model PostComment {
  id                String   @id @default(uuid())
  postId            String   @map("post_id")
  authorId          String   @map("author_id")
  content           String   @db.Text
  createdAt         DateTime @default(now()) @map("created_at")
  updatedAt         DateTime @updatedAt @map("updated_at")

  post              SocialPost @relation(fields: [postId], references: [id], onDelete: Cascade)
  author            User     @relation(fields: [authorId], references: [id], onDelete: Cascade)

  @@index([postId])
  @@index([authorId])
  @@map("post_comments")
}

model AchievementShare {
  id                String   @id @default(uuid())
  userId            String   @map("user_id")
  achievementType   String   // level, milestone, streak, etc
  message           String?  @db.Text
  sharedOn          String[] // twitter, facebook, linkedin, email
  shareCount        Int      @default(0)
  createdAt         DateTime @default(now()) @map("created_at")

  user              User     @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@index([userId, createdAt(sort: Desc)])
  @@map("achievement_shares")
}

model UserSecurity {
  id                String   @id @default(uuid())
  userId            String   @unique @map("user_id")
  twoFAEnabled      Boolean  @default(false)
  twoFASecret       String?  @map("two_fa_secret") // encrypted
